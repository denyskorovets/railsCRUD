<!DOCTYPE html>
<html>
<head>
	<title>Welcome!</title>
</head>
<body>
<p>Welcome!</p>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<h2>Register!</h2>
<form action="/users/create" method="post">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
  First Name: <input type="text" name="user[first_name]">
  Last Name: <input type="text" name="user[last_name]">
  Email: <input type="text" name="user[email]">
  Location: <input type="text" name="user[location]"> 
  <select name="user[state]">
    <option value="CA">CA</option>
    <option value="WA">WA</option>
    <option value="NY">NY</option>
    <option value="NV">NV</option>
  </select>
  Password: <input type="password" name="user[password]">
  Password Confirmation: <input type="password" name="user[password_confirmation]">
  <input type="submit" value="Register">
    <div id="Create_Notice">
      <% if flash[:register_notice] %>
          <div class="notice"><%= flash[:register_notice] %></div>
      <% end %>
    </div>
</form>



<h2>Log in!</h2>
<form action="/sessions/create" method="post">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
  Email: <input type="text" name="login_email">
  Password: <input type="password" name="login_password">
  <input type="submit" value="Log In">
	  <div id="Create_Notice">
	  <% if flash[:login_notice] %>
	      <div class="notice"><%= flash[:login_notice] %></div>
	  <% end %>
	</div>
</form>
</body>
</html>